
@model Testimonial
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/Layout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referanslarım</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yeni Referans Ekle</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="TestimonialId" />
                            <label>Ad - Soyad</label>
                            <input type="text" asp-for="NameSurname" class="form-control mb-2" />

                            <label>Ünvan</label>
                            <input type="text" asp-for="Title" class="form-control mb-2" />

                            <label>Açıklama</label>
                            <input type="text" asp-for="Descriptiion" class="form-control mb-2" />

                            <label>Fotoğraf</label>
                            <input type="text" asp-for="ImageUrl" class="form-control mb-2" />

                            <button class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i>
                                Referans Ekle
                            </button>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
