@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımda</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Hakkımda Bilgisi</div>
                    </div>
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Alt Açıklama</th>
                                    <th scope="col">Detay</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <td>@item.AboutId</td>
                                        <td>@item.Title</td>
                                        <td>@(item.SubDescription.Length > 90 ? item.SubDescription.Substring(0, 90) + "..." : item.SubDescription)</td>
                                        <td>@(item.Details.Length > 90 ? item.Details.Substring(0, 90) + "..." : item.Details)</td>
                                        <td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-success btn-sm">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
