@model Contact
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Güncelle</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="ContactId" />
                            <label>Başlık</label>
                            <input type="text" asp-for="Title" class="form-control mb-2" />

                            <label>Açıklama</label>
                            <input type="text" asp-for="Description" class="form-control mb-2" />

                            <label>Telefon 1</label>
                            <input type="text" asp-for="Phone1" class="form-control mb-2" />

                            <label>Telefon 2</label>
                            <input type="text" asp-for="Phone2" class="form-control mb-2" />

                            <label>Email 1</label>
                            <input type="text" asp-for="Email1" class="form-control mb-2" />

                            <label>Email 2</label>
                            <input type="text" asp-for="Email2" class="form-control mb-2" />

                            <label>Adres</label>
                            <input type="text" asp-for="Address" class="form-control mb-2" />

                            <button class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i>
                                İletişim Güncelle
                            </button>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

