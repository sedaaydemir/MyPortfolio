@model List<MyPortfolio.DAL.Entities.Testimonial>

    .align-left {
    text-align: left;
    margin-left: 0;
}

.align-right {
    text-align: right;
    margin-right: 0;
}

<section id="testimonial" class="s-testimonials target-section">
    <div class="overlay"></div>

    <div class="row testimonials-header">
        <div class="col-full">
            <h1 class="h02">Hakkımda, kim ne dedi?</h1>
        </div>
    </div>

    @foreach (var item in Model)
    {
        <div class="row testimonials">
            <div class="col-full testimonials__slider">
                <div class="testimonials__slide @((item.TestimonialId % 2 == 0) ? "align-left" : "align-right")">
                    <img src="@item.ImageUrl" alt="Author image" class="testimonials__avatar">
                    <p>
                        @item.Descriptiion
                    </p>
                    <div class="testimonials__author h06">
                        @item.NameSurname
                        <span>@item.Title</span>
                    </div>
                </div>
            </div>
        </div>
    }
</section>


