
@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Proje</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Proje Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Projeler İle İlgili İşlemleri Aşağıdaki Panelden Yapabilirsiniz
                        </div>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Alt Başlık</th>
                                    <th scope="col">Fotoğraf Url</th>
                                    <th scope="col">Proje Url</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Title</td>
                                        <td>@item.SubTitle</td>
                                        <td>@item.ImageUrl.Substring(0, Math.Min(40, item.ImageUrl.Length))...</td>
                                        <td>@item.Url.Substring(0, Math.Min(40, item.Url.Length))...</td>
                                        <td>@item.Description.Substring(0, Math.Min(40, item.Description.Length))...</td>
                                        <td><a href="/Portfolio/DeletePortfolio/@item.PortfolioId" class="btn btn-danger btn-sm">Sil</a></td>
                                        <td><a href="/Portfolio/UpdatePortfolio/@item.PortfolioId" class="btn btn-success btn-sm">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Portfolio/CreatePortfolio/" class="btn btn-primary">Yeni Proje Girişi</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
